<h2>New image</h2>

<% form_for(:image, :url => { :action => "create" }, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
	<%= f.file_field :uploaded_data %>
	<p>Description: </p>
	<%= f.text_area :description %>
  <p><%= f.submit "Create" %></p>
<% end %>

<%= link_to 'Back', images_path %>
