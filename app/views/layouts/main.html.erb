<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<title><%= Setting.site_title %></title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="<%= Setting.meta_keywords %>"/> 
	<meta name="author" content="<%= Setting.meta_author %>"/>	
	<meta name="description" content="<%= Setting.meta_description %>" />
	<%= stylesheet_link_tag 'style' %>
	<%= stylesheet_link_tag 'scaffold' %>
	<%= stylesheet_link_tag 'pagination' %>	
	<%= javascript_include_tag :defaults %>
</head>
<body>
	
	<div class="container">
		
		<div class="titleblock">
			<div class="title">
				<%= image_tag "/images/logo.png" %>
			</div>
		</div>
		
		<div>
			<ul class="navbar">
				<% @pages.each do |page| %>
					<li> <%= link_to page.title, page_url(page.permalink), :class => "style5 nav" %> </li>
				<% end %>
				<li> <%= link_to "Contact", new_message_path, :class => "style5 nav" %> </li>
				<li> <%= link_to "Gallery", images_path, :class => "style5 nav" %> </li>
			</ul>
		</div>
		
		
		<% if admin %>
			<div>
				<ul class="navbar">
					<li> <%= link_to "Pages", pages_path, :class => "style5 nav admin" %> </li>
					<li> <%= link_to "Settings", settings_path, :class => "style5 nav admin" %> </li>
					<li> <%= link_to "Messages", messages_path, :class => "style5 nav admin" %> </li>
					<li> <%= link_to "Users", users_path, :class => "style5 nav admin" %> </li>
				</ul>
			</div>
		<% end %>
		
		
		<div class="content">
			<%= flash[:notice] %>
			<%= yield %>
		</div>
		
		<div class="footer">
			<div class="right style11">
				<p class="style14">
					&copy; <%= Setting.copyright %>&nbsp; 
					<%= render :partial => "/users/user_bar" %>
				</p>
			</div>
			<p>&nbsp;</p>
		</div>
		
	</div>
</body>
</html>
